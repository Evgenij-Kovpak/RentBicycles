@model IEnumerable<RentBikes.Models.Bike>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Bikes </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-info" asp-action="Create"> Add new bike</a>
    </div>
    <br />
    <div class="col-12">
        <table class="table table-striped border">
            <tr class="table-info">
                <th>Bike Photo</th>
                <th>Bike Detail</th>
                <th>Price</th>
                
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img src="@Html.DisplayFor(m => item.ImagePath)" width="150px" height="100px" /></td>
                    <td>
                        <b>@Html.DisplayFor(m => item.Make.Name)</b><br />
                        <b>Model:</b>@Html.DisplayFor(m=>item.Model.Name)
                    </td>
                    <td>@Html.DisplayFor(m => item.Price) @Html.DisplayFor(m => item.Currency)</td>
                    <td>
                        
                    </td>
                    <partial name="_TableButtonPartial" model="item.Id" />
                </tr>
            }
        </table>
    </div>
</div>


