@model RentBikes.Models.ViewModel.BikeViewModel
@using RentBikes.Extensions
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<h2 class="text-info">Add bike</h2>
<form method="post" enctype="multipart/form-data" asp-action="Create">
    <div class="form-group row">

        <div class="col-2">
            <label asp-for="Makes"></label>
        </div>

        <div class="col-4">
            <select asp-for="Bike.MakeId" asp-items="Model.Makes.ToSelectListItem()" class="form-control"></select>
        </div>

        <div class="col-auto">
            <label asp-for="Bike.ImagePath"></label>
        </div>

        <div class="col-4">
            <input type="file" name="files" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Models"></label>
        </div>

        <div class="col-4">
            <select asp-for="Bike.ModelId" asp-items="Model.Models.ToSelectListItem()" class="form-control"></select>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Bike.Price"></label>
        </div>

        <div class="col-4">
            <input asp-for="Bike.Price" class="form-control" />
        </div>

        <div class="col-1">
            <label asp-for="Bike.Currency"></label>
        </div>

        <div class="col-4">
            <select asp-for="Bike.Currency" asp-items="Model.Currencies.ToSelectListItem()" class="form-control"></select>
        </div>
    </div>

    <br />
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Create" />
        <a asp-action="Index" class="btn btn-success">Back</a>
    </div>


</form>

